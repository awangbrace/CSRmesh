<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
	android:background="@color/color_blue"
	android:id="@+id/actionBarConfig">
    
             <TextView 
            android:id="@+id/barShowGroupTitleTxt"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="@string/gateway_config_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <RelativeLayout 
            android:layout_width="50dp"
            android:id="@+id/barShowGroupBack"
android:background="@drawable/selector_base_btn"
            android:layout_alignParentLeft="true"
            android:layout_height="match_parent">
            
	        <ImageView
	            android:layout_centerInParent="true"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:src="@drawable/back"/>
	        
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="50dp"
            android:id="@+id/barShowGroupAdd"
android:background="@drawable/selector_base_btn"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent">
            
	        <ImageView
	            android:layout_centerInParent="true"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:src="@drawable/add"/>
	        
        </RelativeLayout>

</RelativeLayout>
