<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.activity.ShowRecordActivity" >

	<include layout="@layout/actionbar_show_record"/>
    
    <android.support.v4.view.ViewPager
		android:layout_below="@+id/barShowRecordContent"
		android:layout_above="@+id/layoutBottomContent"
        android:id="@+id/atyShowRecordPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    
    <LinearLayout
		android:id="@+id/layoutBottomContent"
		android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:orientation="horizontal" >
	    
	    <Button
	        android:layout_marginRight="0.5dp"
            android:id="@+id/atyShowRecordLookSnapshotBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/selector_base_btn"
            android:text="@string/look_snapshot"
            android:textColor="@color/white"/>
	    
	   <Button
	       android:layout_marginLeft="0.5dp"
	        android:textColor="@color/white"
	        android:text="@string/look_recording"
	        android:background="@drawable/selector_base_btn"
	        android:id="@+id/atyShowRecordLookRecordingBtn"
	        android:layout_weight="1.0"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"/>
        
    </LinearLayout>

</RelativeLayout>
