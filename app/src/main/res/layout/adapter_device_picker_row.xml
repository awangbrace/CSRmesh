<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/list_item_two_line_height">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="24dip"
        android:layout_height="24dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:tint="@color/icon_off"
        android:layout_marginLeft="@dimen/material_classic_padding"
        android:src="@drawable/ic_wb_incandescent_black_36dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/icon"
        android:layout_marginLeft="@dimen/material_classic_padding"
        android:layout_marginRight="@dimen/material_classic_padding"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:textColor="@color/primary_text"
            />

    </LinearLayout>

    <ImageButton
        android:id="@+id/selected_image"
        android:layout_width="24dip"
        android:layout_height="24dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:layout_marginRight="@dimen/material_classic_padding"
        android:background="@drawable/ripple_round_default"
        android:src="@drawable/ic_done_black_24dp"
        />

</RelativeLayout>