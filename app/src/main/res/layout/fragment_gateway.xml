<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/fragGatewayPasswordEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toLeftOf="@+id/fragGatewayPasswrodBtn"
        android:layout_alignParentLeft="true"
        android:paddingLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="@string/please_input_gateway_password"
        android:maxLength="20"
        android:textSize="15sp" />

    <Button
        android:id="@+id/fragGatewayPasswrodBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_base_btn"
        android:text="@string/confirm"
        android:textSize="15sp"
        android:textColor="@color/white" />

</RelativeLayout>