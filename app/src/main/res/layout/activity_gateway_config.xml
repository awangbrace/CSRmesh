<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.axalent.view.activity.GatewayConfigActivity" >

    <include layout="@layout/actionbar_gateway_config"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/gateway_ip_layout">

        <TextView
            android:id="@+id/gateway_ip_txt"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:text="@string/discovery_gateway_title"
            android:textSize="16sp"/>

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/gateway_ip_txt"
            android:layout_centerVertical="true"
            android:id="@+id/gateway_ip_value_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="192.168.99.0" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darkgray"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/wifi_name_layout">

        <TextView
            android:id="@+id/wifi_name_txt"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:text="@string/switch_wifi"
            android:textSize="16sp" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/wifi_name_txt"
            android:id="@+id/wifi_name_value_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TP_LINK_978"/>

    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darkgray"/>

</LinearLayout>
